<div class="container" style="margin: 0 15px;">
    <h4 class="mb-xl">Country</h4>
    <div class="row" style="margin: 0;">
        {% for value in available | pluck('country') | unique %}


            <div class="col-md-2" style="padding-left: 0" {%
                if data.country is defined and data.country == value %} class="active"{% endif
            %}>

                <div class="tt-country tt-country-{{ value }}">
                    <input type="radio" name="plan[country][]" class="tt-radio-btn country" value="{{ value }}">


                    <span class="tt-font-bold" style="font-weight: bold;">{{ ('proxy.country.' ~ value) | trans }}</span>

                    <div class="flag">



                    </div>
                </div>

            </div>
        {% endfor %}
    </div>
</div>

