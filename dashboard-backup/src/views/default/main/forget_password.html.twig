{% extends 'base.html.twig' %}

{% block content_title %}
    Lost Password Reset
{% endblock %}

{% block content %}


    <div class="container-fluid">
        <div class="row wrapper-flex">

            <div class="col-md-6 col-lg-5" style="margin: auto">
                {% include 'flash.html.twig' %}
                <p style="margin: 30px 0 "><b>Forgotten your password? </b><br>
                    Enter your email address below to begin the reset process.</p>
                <form method="post" action="" role="form" data-toggle="validator">
                    <div class="row form-group">
                        <div class="col-md-12">
                            <label for="inputEmail">Email Address</label>
                            <input name="email" class="form-control tt-input-buy" id="inputEmail" placeholder="Enter email" autofocus="" type="email" required>
                        </div>


                    </div>
                    <div class="form-group">
                        {% include 'captcha.html.twig' %}
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn tt-btn-red">Reset Password</button>
                    </div>
                </form>
            </div>

        </div>
    </div>

{% endblock %}
